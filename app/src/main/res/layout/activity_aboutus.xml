<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- The main content view -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/aboutUsTitle"
            android:layout_width="230dp"
            android:layout_height="66dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"
            android:ems="10"
            android:text="About Us"
            android:textAllCaps="true"
            android:textColor="@color/jet"
            android:textSize="50sp"
            android:textStyle="italic"
            android:typeface="normal"
            app:fontFamily="sans-serif-condensed-medium" />


        <TextView
            android:id="@+id/aboutUsBody"
            android:layout_width="350dp"
            android:layout_height="364dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="205dp"
            android:ems="10"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="Somos un grupo de estudiantes de Ing. Informática en la UPM y hemos desarrollado esta app en Android con el Android Studio. Esperamos que os guste :)" />

        <TextView
            android:id="@+id/aboutUsLocation"
            android:layout_width="350dp"
            android:layout_height="36dp"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="100dp"
            android:ems="10"
            android:text="Madrid, España "/>
        <TextView
            android:id="@+id/aboutUsVersion"
            android:layout_width="350dp"
            android:layout_height="36dp"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="80dp"
            android:ems="10"
            android:text="FilmoTech Version 3.2.7" />
    </FrameLayout>
    
    <!-- The navigation drawer -->
    <ListView android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="@color/accent"/>
</android.support.v4.widget.DrawerLayout>