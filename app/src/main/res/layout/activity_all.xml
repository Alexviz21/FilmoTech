        android:text="FILM 3" />

    <Button
        android:id="@+id/film4"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:text="FILM 4" />

    <Button
        android:id="@+id/film5"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_width="350dp"
